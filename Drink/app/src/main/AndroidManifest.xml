<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sict.drink">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ScreenActivity" android:theme="@style/Splash"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ThanhToanActivity" />
        <activity android:name=".GioHangActivity" />
        <activity android:name=".DoUongActivity" />
        <activity android:name=".SignupActivity" android:theme="@style/Splash"/>
        <activity android:name=".LoginActivity" android:theme="@style/Splash"/>
        <activity android:name=".MainActivity">
        </activity>
    </application>

</manifest>